<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tjint.springboot.app.api.admin.service.impl.AdminLoginApiMapper">

     <select id="getUserList" resultType="userInfoVo">
           SELECT user_id, password
           FROM app_user_info
    </select>

    <select id="getUserId" resultType="String">
        SELECT user_id
        FROM app_user_info
        WHERE user_id = #{id}
    </select>

    <select id="adminLogin" parameterType="userInfoVo" resultType="String">
        /*[AdminLogin_SQL.xml].[adminLogin] */
        <![CDATA[
        SELECT PASSWORD
        FROM app_user_info
        WHERE USER_ID = #{userId}
        ]]>
    </select>

    <select id="selectAdminSeq" parameterType="userInfoVo" resultType="userInfoVo">
        /*[AdminLogin_SQL.xml].[selectAdminSeq] */
        <![CDATA[
        SELECT
            USER_SEQ as userSeq, name
        FROM
            app_user_info
        WHERE
            USER_ID = #{userId}
        ]]>
    </select>
</mapper>
